<!--packageAct/actdetails/actdetails.wxml-->

<swiper indicator-dots='true' indicator-active-color='#5A7F5B' indicator-color='#FAFAFA' circular='true' autoplay='true'>
  <swiper-item wx:for='{{actDetailData.moments}}' wx:key='index'>
    <image class='swiper-img' src='{{item}}'></image>
  </swiper-item>
</swiper>
<view class='jh-fmw5' style='margin-top:40rpx;'>{{actDetailData.title}}</view>
<view style='margin-top:40rpx; color:#808080; font-size: 28rpx;'>{{actDetailData.introduction}}</view>
<jh-title title='活动时间'></jh-title>
<view class='jh-fmw5' style='margin:32rpx 0 0 32rpx;font-size: 24rpx;'>{{actDetailData.startTime}}～{{actDetailData.endTime}}</view>
<jh-title title='本期金牌教官'></jh-title>
<jh-fold bind:callBack='foldBack' open-status='{{openStatus}}'>
  <view class='coach_back'>
    <jh-portrait wx:for='{{actDetailData.teacherList}}' wx:key='teacherId' portrait-data='{{item}}' style='margin-top: 40rpx;width: 25%;' bind:callBack='coachItemClick'></jh-portrait>
  </view>
</jh-fold>
<jh-title title='活动流程'></jh-title>
<jh-navbar in-style='margin-top:60rpx;' navbar-data='{{navbarData}}' bind:callBack='actBarBasck'></jh-navbar>
<view class='flow' wx:for='{{actDetailData.contentList[atIndex]}}' wx:key='index'>
  <view >
    <view class='jh-listnp flow-list'>
      <view class='flow-time'>{{item.slot}}</view>
      <view class='flow-title jh-list_item'>{{item.picName}}</view>
    </view>
    <image class='flow-img' src="{{item.picUrl}}"></image>
    <view class='jh-listnp flow-expand'>{{item.plan}}</view>
  </view>
</view>
<jh-title title='精彩瞬间'></jh-title>
<view class='wonderful_back'>
  <image class='wonderful' src='/img/win1.png' wx:for='abckdede' wx:key='index'></image>
</view>
<view style='height:200rpx;'>
</view>
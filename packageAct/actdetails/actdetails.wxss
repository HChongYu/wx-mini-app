/*活动流程*/
.flow{
    padding: 48rpx 0;
   
    font-size: 24rpx;
}
.flow-circle{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ECECEC;
  margin-right: 16rpx; 
  margin-top: 12rpx; 
}

.flow-list{
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  align-items: flex-start;
}
.flow-time{
    width: 180rpx;
    max-width: 180rpx;
    font-family:PingFangSC-Thin;
    font-weight:100;
}
.flow-img{
  margin-right: 20rpx;
  height: 120rpx;
  min-width: 258rpx;
  border-radius: 16rpx;
  height: 122rpx;
  width: 258rpx;   
}
.flow-title{
  color: #333333;
}
.flow-expand{
    display:-webkit-box;
    margin-top:  20rpx;
    max-height: 80rpx;
    color: #808080;
    font-family:PingFangSC-Thin;
    font-weight:100;
    font-size: 24rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}

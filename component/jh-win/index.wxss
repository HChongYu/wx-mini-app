/* component/jh-win/index.wxss */
.win_large{
  margin-top: 40rpx;
  border-radius: 40rpx;
  width: 100%;
  box-shadow: 0 1rpx 1rpx 1rpx #d0d0d0;
  overflow: hidden;
}
.win_small{
  margin-top: 40rpx;
  border-radius: 40rpx;
  width: 436rpx;
  box-shadow: 0 1rpx 1rpx 1rpx #d0d0d0;
  overflow: hidden;
}
.win-map_large{
  display: block;
  width: 100%;
  height: 400rpx;
}
.win-map_small{
  display: block;
  width: 100%;
  height: 320rpx
}
.win-bottom {
  padding: 24rpx 24rpx 28rpx 40rpx;
  width: 100%;
}

.win-list {
  margin-bottom: 4rpx;
}

.win-list_main {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.win-list_time {
  font-size: 24rpx;
  color: #d0d0d0;
}

.win-list_minor_large{
  font-size: 28rpx;
  color:rgba(0,0,0,.46);
}

.win-list_minor_small{
  font-size: 28rpx;
  color:rgba(0,0,0,.46);
  max-width: 366rpx;  
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
<!--logs.wxml-->
<jh-navbar style='margin-top:20rpx;' navbar-data='{{navbarData}}' at-index='{{atIndex}}' bind:callBack='circleBarBack'></jh-navbar>
<view wx:if='{{atIndex==0}}'>
  <view class="win" wx:for="{{winList}}" wx:key='index'>
    <image class="win-map" mode="scaleToFill" src="{{item.map}}">
    </image>
    <view class="win-bottom">
      <view class="win-bar jh-slh">{{item.bar}}</view>
      <view class="jh-listnp win-list">
        <view class="jh-list_item jh-slh">
          {{item.time}}
        </view>
        <view class="jh-listnp win-list_see">
          <view class="">
          </view>
          <view class="">
            {{item.seeNum}}
          </view>
        </view>
        <view class="jh-listnp win-list_see">
          <view>
          </view>
          <view>
            {{item.collectNum}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='jh-bottom_hint'>我是有底线的</view>
</view>
<block wx:elif='{{atIndex==1}}'>
  <view style='margin-top:30rpx;' bindtap='publishClick'>新建</view>
  <view bindtap="newsClick" class="jh-list newslist">
    <view class="jh-slh" style='font-size:24rpx;' >新收到的消息</view>
    <view class='jh-list_item'>
      <view class='newslist-num'>
        32
      </view>
    </view>
    <view class="jh-list_ft jh-list_ft_arrow" ></view>
  </view>
  <view style='margin-top:24rpx;'>
    <jh-chat wx:for='aaaa' bind:callBack='chatBack'></jh-chat>
  </view>
</block>

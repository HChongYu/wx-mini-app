

page {
  padding-bottom:  100rpx;
}


.win{
  margin-top: 40rpx; 
  border-radius: 40rpx;
  width: 100%;
  box-shadow: 0 1rpx 1rpx 1rpx #d0d0d0;
  overflow: hidden;
}
.win-map{
  width: 100%;
  height: 300rpx;
}
.win-bottom{
  position: relative;
  padding: 74rpx 32rpx 32rpx 56rpx;
  width: 100%;
}

.win-bar{
  position: absolute;
  top: -50rpx;
  left: 30rpx;
  padding: 14rpx 30rpx;
  background: #5A805C;
  border: 4rpx solid #fff;
  border-radius: 0 40rpx 40rpx 40rpx;
  max-width: 554rpx;
  color: #fff;
  font-size: 28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  box-shadow: 0 1rpx 1rpx 1rpx #f9f9f9;
}
.win-list{
  font-size: 24rpx;
  color: #D0D0D0;
}
.win-list_see{
  margin-left: 30rpx;
  color:rgba(0,0,0,0.18);
}

.noopen {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.18);
  margin-top: 384rpx;
  text-align: center;
}
/**/

/* 新收到的消息 */
.newslist{
  margin-top: 20rpx;
  padding: 24rpx 0 ;
  border-top:2rpx solid #F9F9F9;
}
.newslist-num{
  margin-left: 8rpx; 
  height: 32rpx;
  width: 32rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  background-color: #9FB5A0;
  border-radius: 50%;
}


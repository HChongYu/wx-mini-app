.news_back{
    position: fixed;
    bottom: 0;
    left: 0;
    height: 100vh;
    width: 100%;
}
.news{
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 40rpx;
    height: 76vh;
    border-radius: 32rpx 32rpx 0 0;
    background: #414141;
    color: #fff;
    font-size:  32rpx;
}
.news-empty{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}
.news-header{
    margin: 44rpx auto;
    height: 40rpx;
    width: 100rpx;
    background: #fff;
    border-radius: 18rpx;
}
.news-item{
    padding: 40rpx 0;
}
.news-list{
    margin-top: 12rpx;
    font-size: 24rpx;
    color: #808080;
}
.news-list-from{
    padding-right: 30rpx;
}
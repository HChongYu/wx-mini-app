view {
  box-sizing: border-box;
  word-break: break-all;
  overflow: auto;
  font-family:PingFangSC;
  font-weight:400;
}

/* 缩进 */

.jh-slh {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.jh-slh2 {
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 字重 */

.jh-fmw5 {
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.jh-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 40rpx 16rpx;
  border-bottom: 3rpx solid #f9f9f9;
}

.jh-listnp {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.jh-list_item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}


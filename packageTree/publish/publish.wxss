.publish-list{
  color: #333333;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F9F9F9; 
  font-size: 28rpx;
}
.upload-img{
  display: block;
  position: relative;
  width:204rpx;
  height:204rpx;
  border-radius:8rpx;
}
.upload-img-del{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width:34rpx;
  height:34rpx;
}
.upload-handle{
  position: relative;
  width:204rpx;
  height:204rpx;
  background: #F2FAF6;
  border-radius:8rpx;
  border:2rpx dashed rgba(212,228,219,1);
  margin-left: 10rpx; 
}
.upload-handle-add{
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 42rpx;
  height: 42rpx;
}
.hanle-submit{
  position: fixed;
  left: 26rpx;
  bottom: 0;
  width: 698rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  text-align: center;
  color: #2DA25F;
  border-top: 2rpx solid #F9F9F9;

}

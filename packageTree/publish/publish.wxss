.publish-list{
  color: #333333;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F9F9F9; 
  font-size: 28rpx;
}

.hanle-submit{
  position: fixed;
  left: 26rpx;
  bottom: 0;
  width: 698rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
  text-align: center;
  color: #2DA25F;
  border-top: 2rpx solid #F9F9F9;
  background: #fff;
}
/* packageTree/message/message.wxss */

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 100rpx;
  z-index: 2001;
}

.capsule {
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 168rpx;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  color: #2a2a2a;
  border: 2rpx solid #8fd6ad;
  background: #fff;
  z-index: 2001;
  text-align: center;
}

.capsule-left {
  position: absolute;
  left: 0;
  width: 88rpx;
  height: 44rpx;
  line-height: 42rpx;
  border-radius: 22rpx;
}

.capsule-right {
  position: absolute;
  left: 76rpx;
  width: 88rpx;
  height: 44rpx;
  line-height: 42rpx;
  border-radius: 22rpx;
}

.capsule-pitch {
  color: #fff;
  background: #8fd6ad;
  z-index: 2002;
}

.clear {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #b8b8b8;
  font-size: 24rpx;
  text-decoration: underline;
}
.message{
  padding: 40rpx 0;
  border-bottom: 2rpx solid #F9F9F9;
}
.message-icon{
  width: 50rpx;
  height: 50rpx;
  min-width: 50rpx;
  min-height: 50rpx;
}
.message-hint {
  padding-left: 20rpx;
  font-size: 32rpx;
  color: #2a2a2a;
}

.message-top {
  padding-top: 100rpx;
}

.message-chat {

  padding-left: 10rpx;
  font-size: 32rpx;
}

.message-content {
  margin-left: 62rpx; 
  margin-top: 24rpx; 
  padding: 24rpx 16rpx;
  min-height: 128rpx;
  font-size: 28rpx;
  background: #F9F9F9;
  border-radius: 12rpx;
  color: #282828;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  
}

.message-createAt {
  color: #b8b8b8;
  font-size: 24rpx;
}
